                                    <th>ID</th>
                                    <th>内容</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% comments.forEach(function(item) {%>
                                    <tr>
                                        <td>
                                            <p>
                                                <%=item._id %>
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <%=item.content %>
                                            </p>
                                        </td>
                                        <td>
                                            <a class="opear" href="#">删除</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>
    </div>
