<%- include('../shared/admin/header') %>
<div class="wrapper">
    <%- include('../shared/admin/navbarTop') %>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%=title%></h1>
            </div>
        </div>
        <div class="row">
            <div class="form-wrap col-lg-12">
                <form id="create_topic_form" action="/admin/about/save" method="post">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-1 control-label">文章内容</label>
                            <div id="editormd" class="col-md-9">
                                <textarea class="textarea" name="about[content]" style="display: none;"><%=about.content%></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-5">
                                <button type="submit" class="btn btn-default btn-primary">提交</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../shared/admin/footer') %>
<link rel="stylesheet" href="//cdn.jsdelivr.net/editor/0.1.0/editor.css">
<script src="//cdn.jsdelivr.net/editor/0.1.0/editor.js"></script>
<script src="//cdn.jsdelivr.net/editor/0.1.0/marked.js"></script>
<script type="text/javascript">
    var editor = new Editor();
    editor.render($('.textarea')[0]);
</script>